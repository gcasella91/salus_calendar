<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User #<%= @user.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/users" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link user start -->
      <div class="col">
        <a href="/users/<%= @user.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user
        </a>
      </div>
      <!-- Edit link user end -->

      <!-- Delete link user start -->
      <div class="col">
        <a href="/delete_user/<%= @user.id %>" class="btn btn-block btn-outline-secondary">
          Delete user
        </a>
      </div>
      <!-- Delete link user end -->
    </div>

    <dl>
      <dt>
        Token calendar
      </dt>
      <!-- Display token_calendar start -->
      <dd>
        <%= @user.token_calendar %>
      </dd>
      <!-- Display token_calendar end -->

      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @user.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Email
      </dt>
      <!-- Display email start -->
      <dd>
        <%= @user.email %>
      </dd>
      <!-- Display email end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@user.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@user.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "user_templates/user_restrictions" %>
  </div>
</div>
<!-- Show Page Customization end -->
