<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restrictions
    </h1>

    <a href="/restrictions/new" class="btn btn-block btn-outline-secondary">
      Add a new restriction
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "restriction_templates/restrictions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restrictions.each do |restriction| %>
      <tr>
        <td>
          <%= restriction.id %>
        </td>

        <td>
          <% if restriction.user.present? %>
            <a href="/users/<%= restriction.user.id %>">
              <%= restriction.user.token_calendar %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(restriction.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(restriction.updated_at) %> ago
        </td>

        <td>
          <a href="/restrictions/<%= restriction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @restrictions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
